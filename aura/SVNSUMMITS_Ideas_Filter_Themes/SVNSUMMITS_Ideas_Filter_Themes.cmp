<aura:component controller="SVNSUMMITS_IdeaFiltersController"
                access="global">

    <c:SVNSUMMITS_Include_SemanticUI />

    <aura:attribute name="debugMode" type="Boolean" default="false" access="global" />

    <aura:attribute name="labelFilter" type="String" default="{!$Label.c.ss_idea_label_Themes}" access="global"/>
    <aura:attribute name="themesList" type="List" access="global" />

    <aura:handler name="init" value="{!this}" action="{!c.initializeFilters}" />

    <ui:inputSelect aura:id="selectedThemes"
                    class="slds-input-select ui dropdown sortByThemes"
                    change="{!c.filterByThemes}">

        <ui:inputSelectOption text="{!v.labelFilter}"
                              label="{!v.labelFilter}" />
        <aura:iteration items="{!v.themesList}" var="themes">
            <ui:inputSelectOption text="{!themes}"
                                  label="{!themes}"/>
        </aura:iteration>
    </ui:inputSelect>
</aura:component>