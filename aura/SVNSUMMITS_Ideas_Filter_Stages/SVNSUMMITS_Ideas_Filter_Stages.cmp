<aura:component controller="SVNSUMMITS_IdeaFiltersController" access="global">

    <c:SVNSUMMITS_Include_SemanticUI />

    <aura:attribute name="debugMode" type="Boolean" default="false" access="global" />

    <aura:attribute name="labelFilter" type="String" default="{!$Label.c.ss_idea_label_Status}" access="global"/>
    <aura:attribute name="statusList" type="Set" access="global" />

    <aura:handler name="init" value="{!this}" action="{!c.onInit}" />

    <ui:inputSelect aura:id="selectedStatus"
                    class="slds-input-select ui dropdown stage"
                    change="{!c.filterByStatus}">
        <ui:inputSelectOption text="{!v.labelFilter}"
                              label="{!v.labelFilter}"/>
        <aura:iteration items="{!v.statusList}" var="status">
            <ui:inputSelectOption text="{!status}"
                                  label="{!status}" />
        </aura:iteration>
    </ui:inputSelect>
</aura:component>