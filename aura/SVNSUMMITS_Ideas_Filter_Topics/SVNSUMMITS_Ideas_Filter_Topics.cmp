<aura:component controller="SVNSUMMITS_IdeaFiltersController" access="global">

    <c:SVNSUMMITS_Include_SemanticUI />

    <aura:attribute name="debugMode" type="Boolean" default="false" access="global" />

    <aura:attribute name="labelFilter"    type="String" default="{!$Label.c.ss_idea_label_topics}" access="global"/>
    <aura:attribute name="topicNamesList" type="List" access="global" />

    <aura:handler name="init" value="{!this}" action="{!c.initializeFilters}" />

    <ui:inputSelect multiple="false"
                    aura:id="selectedTopic"
                    class="slds-input-select ui dropdown topic"
                    change="{!c.filterByTopics}">
        <ui:inputSelectOption text="{!v.labelFilter}"
                              label="{!v.labelFilter}"/>
        <aura:iteration items="{!v.topicNamesList}" var="topic">
            <ui:inputSelectOption text="{!topic}"
                                  label="{!topic}"/>
        </aura:iteration>
    </ui:inputSelect>
</aura:component>