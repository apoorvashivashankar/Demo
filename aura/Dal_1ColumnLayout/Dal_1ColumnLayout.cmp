<aura:component description="Dal_1ColumnLayout" implements="forceCommunity:layout">
        <aura:attribute name="headerinBG" type="Aura.Component[]" required="false"/>
        <aura:attribute name="content" type="Aura.Component[]" required="false"/>

        <section class="dal_lead-banner">
            <section class="slds-container_x-large slds-container_center slds-p-top_xx-small slds-p-bottom_medium dal_top">
                    {!v.headerinBG}
            </section>
        </section>
        <section class="slds-container_x-large  slds-container_center slds-p-vertical_large dal_middle">
            <div class="slds-grid slds-wrap">
                <div class="slds-size_12-of-12 slds-medium-size_12-of-12">
                        {!v.content}
                </div>
            </div>
        </section>
    </aura:component>