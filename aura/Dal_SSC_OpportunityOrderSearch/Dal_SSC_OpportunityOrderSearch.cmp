                        <aura:iteration items="{!v.lineStatuses}" var="lineStatus">
                            <option value="{!lineStatus.value}" selected="{!lineStatus.selected}" label="{!lineStatus.label}">{!lineStatus.label}</option>
                        </aura:iteration>
                    </lightning:select>&ndash;&gt;
