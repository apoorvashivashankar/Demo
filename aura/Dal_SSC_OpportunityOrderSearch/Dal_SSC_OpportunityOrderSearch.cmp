                </aura:if>
-->
                <lightning:layoutItem class="searchButton slds-align-content-center  slds-p-horizontal_x-small" size="12" mediumDeviceSize="6" largeDeviceSize="1">
                    <label class="slds-form-element__label">&nbsp;</label>
                    <lightning:button variant="neutral" label="Search" onclick="{!c.searchOrders}"/>
                </lightning:layoutItem>

            </lightning:layout>

        </lightning:layoutItem>
       <lightning:layoutItem size="12" class="dal-relate-to-order">
            <c:Dal_SSC_OpportunityOrderSearchList aura:id="orderListComponent" recordId="{!v.recordId}" />
        </lightning:layoutItem>
    </lightning:layout>

</aura:component>