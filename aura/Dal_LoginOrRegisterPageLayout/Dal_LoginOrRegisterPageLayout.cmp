<aura:component description="Dal_LoginOrRegisterPageLayout" implements="forceCommunity:layout">
    <aura:attribute name="header" type="Aura.Component[]" required="false"/>
    <aura:attribute name="footer" type="Aura.Component[]" required="false"/>
    <aura:attribute name="content1" type="Aura.Component[]" required="false"/>
    <aura:attribute name="content2" type="Aura.Component[]" required="false"/>

    <section class="dal_lead-banner">
        <section class="slds-container_x-large slds-container_center">
            <div class="slds-p-around_medium">{!v.header}</div>
            <div class="slds-grid slds-wrap">
  				<div class="slds-col slds-order_2 slds-medium-order_1 slds-large-order_1 slds-size_1-of-1 slds-medium-size_6-of-12 slds-large-size_6-of-12">
            		<div class="slds-p-around_medium loginContent">{!v.content1}</div>
                </div>
  				<div class="slds-col slds-col slds-order_1 slds-medium-order_2 slds-large-order_2 slds-size_1-of-1 slds-medium-size_6-of-12 slds-large-size_6-of-12">
            		<div class="slds-p-around_medium loginContent">{!v.content2}</div>
                </div>
			</div>    
			<div class="slds-p-around_medium">{!v.footer}</div>            
        </section>
    </section>

</aura:component>