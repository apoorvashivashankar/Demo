<aura:component description="Dal_SSC_MyLeadsHeader" extends="c:Dal_SSC_LeadManagementBase"
                implements="force:appHostable,flexipage:availableForAllPageTypes,forceCommunity:availableForAllPageTypes">

    <aura:attribute name="labelLeads" type="String" default="My Leads" />
    <aura:attribute name="labelNewLead" type="String" default="CREATE NEW LEAD" />


    <!-- HEADER -->
    <lightning:layout verticalAlign="center" >

        <lightning:layoutItem size="12" smallDeviceSize="12" mediumDeviceSize="6" largeDeviceSize="6">
            <c:Peak_HTML_Headings headingTag="H1 - Section Heading"
                                  headingText="{!v.labelLeads}" />
        </lightning:layoutItem>

        <lightning:layoutItem size="12" smallDeviceSize="12" mediumDeviceSize="6" largeDeviceSize="6">
            <lightning:button name="{!v.labelNewLead}" label="{!v.labelNewLead}" title="{!v.labelNewLead}"
                              onclick="{!c.createNewLead}" class="header-lead-button" />
        </lightning:layoutItem>

    </lightning:layout>



</aura:component>