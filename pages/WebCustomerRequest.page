<apex:page standardController="Change_Request__c"
    extensions="WebCustomerRequest"
    standardStylesheets="true" showHeader="false" sidebar="false">  
    
    <apex:sectionHeader title="Customer Request" subtitle="New Customer Request" />
    <apex:form >
        <apex:pageMessages />

    <apex:pageBlock title="New Customer Request">
        <apex:pageBlockButtons location="top">
            <apex:commandButton value="Request Account" action="{!save}" />
        </apex:pageBlockButtons>


        <apex:pageBlockSection title="Customer Request Info">
                <apex:inputField value="{!Change_Request__c.Name}" required="true" />
                <apex:inputField value="{!Change_Request__c.Requested_By__c}" required="false" />
        </apex:pageBlockSection>

        <apex:pageBlockSection title="Customer Account Request Information">

        <apex:inputField value="{!Change_Request__c.Region__c}" required="true" />
        <apex:inputField value="{!Change_Request__c.Website__c}" required="false" />
        <apex:inputField value="{!Change_Request__c.Customer_Name__c}"  required="true" />
        <apex:inputField value="{!Change_Request__c.Ship_To_Phone__c}"  required="false" />
        <apex:inputField value="{!Change_Request__c.DBA_Name__c}" required="false" />
        <apex:inputField value="{!Change_Request__c.Fax__c}" required="false" />
        <apex:inputField value="{!Change_Request__c.SSC__c}" required="true" />    
        <apex:inputField value="{!Change_Request__c.Sales_Representative__c}" required="true" />
        <apex:inputField value="{!Change_Request__c.Customer_Class__c}" required="true" />
        <apex:inputField value="{!Change_Request__c.Customer_Type__c}"  required="true" />
        <apex:inputField value="{!Change_Request__c.Business_Reason__c}" required="true" />                       
        <apex:inputField value="{!Change_Request__c.ponumber__c}" required="false" />  
        </apex:pageBlockSection>

        <apex:pageBlockSection title="Comments" columns="1">
            <apex:pageBlockSectionItem >
                <apex:outputLabel value="Comments" for="cr__comments"/>
                <apex:inputText value="{!Change_Request__c.Comments__c}" id="cr__comments"/> 
            </apex:pageBlockSectionItem>
        </apex:pageBlockSection>

        <apex:pageBlockSection title="Contact" columns="2">
            <apex:pageBlockSectionItem ></apex:pageBlockSectionItem>
            <apex:inputCheckbox selected="true" value="{!Change_Request__c.Set_Up_In_ProExchange__c}" required="false" />
            <apex:inputField value="{!Change_Request__c.Contact_First_Name__c}" required="false" />
            <apex:inputField value="{!Change_Request__c.Contact_Last_Name__c}" required="false" />
            <apex:inputField value="{!Change_Request__c.Contact_Email__c}" required="false" />
            <apex:inputField value="{!Change_Request__c.Phone__c}" label="Contact Phone" required="false" />         
        </apex:pageBlockSection>        
        
        <apex:pageBlockSection title="Address Details">
        <apex:pageBlockSectionItem ></apex:pageBlockSectionItem>
        <apex:inputField value="{!Change_Request__c.Copy_Bill_To_Address__c}" required="false" />
        <apex:inputField value="{!Change_Request__c.Bill_Country_N__c}" required="true" />
        <apex:inputField value="{!Change_Request__c.Country_N2__c}" required="false" />
        <apex:inputField value="{!Change_Request__c.Billing_Street_N__c}" required="true" />
        <apex:inputField value="{!Change_Request__c.Billing_Street__c}" required="false" />
        <apex:inputField value="{!Change_Request__c.Address2__c}"  required="false" />
        <apex:inputField value="{!Change_Request__c.Shipping_Address_2__c}" required="false" />
        <apex:inputField value="{!Change_Request__c.Billing_City_N__c}"  required="true" />
        <apex:inputField value="{!Change_Request__c.Billing_City__c}" required="false" />
        <apex:inputField value="{!Change_Request__c.Billing_State_N2__c}" required="true" />
        <apex:inputField value="{!Change_Request__c.Shipping_State_N2__c}" required="false" />
        <apex:inputField value="{!Change_Request__c.Billing_Zip_N__c}" required="true" />
        <apex:inputField value="{!Change_Request__c.Shipping_Zip_N__c}" required="false" />
        <apex:inputField value="{!Change_Request__c.Phone_N__c}" required="true" />          
        </apex:pageBlockSection>
        <apex:pageBlockButtons location="bottom">
            <apex:commandButton value="Request Account" action="{!save}" />
            <apex:commandButton value="Cancel" action="{!cancel}" />
        </apex:pageBlockButtons>        
                
    </apex:pageBlock>
    </apex:form> 
</apex:page>