<apex:page showHeader="false" sidebar="false" standardStylesheets="true"
           standardController="Account" extensions="CustomerRequestNewLightningExtension" applyHTmlTag="false">
    <html xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
        <head>
            <apex:slds />
        </head>
            <apex:form >
        <body class="slds-scope" >
            <div class="slds-page-header" role="banner">
                <div class="slds-grid">
                    <div class="slds-col slds-has-flexi-truncate">
                        <div class="slds-media slds-no-space slds-grow">
                            <div class="slds-media__figure">
                                <svg aria-hidden="true" class="slds-icon slds-icon-standard-Account">
                                    <use xlink:href="{!URLFOR($Asset.SLDS, '/assets/icons/standard-sprite/svg/symbols.svg#Account')}"></use>
                                </svg>
                            </div>
                            <apex:outputPanel styleClass="slds-media__body" rendered="{!LEN(Account.Name)>0}">
                                <p class="slds-text-title--caps slds-line-height--reset">Edit Person Account</p>
                                <h1 class="slds-page-header__title slds-m-right--small slds-align-middle slds-truncate" title="{!Account.Name}">{!Account.Name}</h1>
                            </apex:outputPanel>
                            <apex:outputPanel styleClass="slds-media__body" rendered="{!LEN(Account.Name)==0}">
                                <p class="slds-text-title--caps slds-line-height--reset">Create Person Account</p>
                                <h1 class="slds-page-header__title slds-m-right--small slds-align-middle slds-truncate" title="New Change Request">New Person Account</h1>
                            </apex:outputPanel>
                            <div class="slds-col slds-no-flex slds-grid slds-align-top">
                                <div class="slds-button-group" role="group">
                                    <apex:commandButton styleClass="slds-button slds-button-space-left slds-button--neutral" value="Cancel" action="{!doCancel}" immediate="true" html-formnovalidate="formnovalidate" />
                                    <apex:commandButton styleClass="slds-button slds-button-space-left slds-button--brand" value="Save" action="{!save}" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
                
                <div class="slds-grid slds-wrap">
                        <div class="slds-p-horizontal--small slds-size--1-of-1 slds-m-top--large">
                        <h3 class="slds-text-heading--small slds-m-bottom--medium">Account Details</h3>
                    </div> 

                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label"><abbr class="slds-required" title="required">*</abbr>Name</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Account.Name}"/>
                            </div>
                        </div>
                    </div>
               
                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label"><abbr class="slds-required" title="required">*</abbr>Customer Class</span>
                            <div class="slds-form-element__control">
                                <apex:inputField style="width:97%; line-height:1.875em;" value="{!Account.Customer_Class__c}" />
                            </div>
                        </div>
                    </div>

                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label"><abbr class="slds-required" title="required">*</abbr>Business Type</span>
                            <div class="slds-form-element__control">
                                <apex:inputField style="width:97%; line-height:1.875em;" value="{!Account.Business_Type__c}" />
                            </div>
                        </div>
                    </div>

                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label"><abbr class="slds-required" title="required">*</abbr>Home SSC</span>
                            <div class="slds-form-element__control">
                                <apex:inputField style="width:97%; line-height:1.875em;" value="{!Account.SSC__c}" />
                            </div>
                        </div>
                    </div>

                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label"><abbr class="slds-required" title="required">*</abbr>Account Record Type</span>
                            <div class="slds-form-element__control">

                                <apex:selectList value="{!Account.RecordTypeID}"  >
                                    <apex:selectOptions value="{!RecordTypes}" />
                                </apex:selectList>    

                                            </div>
                        </div>
                    </div>

                    <div class="slds-p-horizontal--small slds-size--1-of-1 slds-m-top--large">
                        <h3 class="slds-text-heading--small slds-m-bottom--medium">Address Information</h3>
                    </div>                  

                                                           
                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label">Billing Country</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Account.BillingCountry}" />
                            </div>
                        </div>
                    </div>
                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label">Shipping Country</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Account.ShippingCountry}" />
                            </div>
                        </div>
                    </div>
                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label">Billing City</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Account.BillingCity}" />
                            </div>
                        </div>
                    </div>
                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label">Shipping City</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Account.ShippingCity}" />
                            </div>
                        </div>
                    </div>
                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label">Bill Address</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Account.BillingStreet}" />
                            </div>
                        </div>
                    </div>
                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label">Shipping Address</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Account.ShippingStreet}" />
                            </div>
                        </div>
                    </div>

                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label">Billing State</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Account.BillingState}" />
                            </div>
                        </div>
                    </div>
                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label">Shipping State</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Account.ShippingState}" />
                            </div>
                        </div>
                    </div>
                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label">Billing Zip</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Account.BillingPostalCode}" />
                            </div>
                        </div>
                    </div>                                                      
                    <div class="slds-p-horizontal--small slds-size--1-of-2">
                        <div class="slds-form-element slds-hint-parent">
                            <span class="slds-form-element__label">Shipping Zip</span>
                            <div class="slds-form-element__control">
                                <apex:inputField styleClass="slds-input" value="{!Account.ShippingPostalCode}"/>
                            </div>
                        </div>
                    </div>
                </div>

            </body>
        </apex:form>
    </html>
    <script>
        var a = navigator.userAgent; 
        if ((a.indexOf('Salesforce') != -1) && (a.indexOf('iPhone') != -1 || a.indexOf('iPad') != -1) && (a.indexOf('Safari') == -1)) { 
        var s = document.createElement('style'); 
        s.innerHTML = "html,html body{overflow:scroll;-webkit-overflow-scrolling:touch;z-index:0;}body{position:absolute;left:0;right:0;top:0;bottom:0;}"; 
        document.getElementsByTagName('head')[0].appendChild(s); 
        };
    </script>
</apex:page>